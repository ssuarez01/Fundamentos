#include <iostream>

using namespace std;

int main(){
    int dias;
    float ganancia , salario;
    cout<<"Ingrese la cantidad de dias que trabajo al mes" <<endl;
    cin>> dias;
    
    cout<<"Ingrese su ganancia por jornada" <<endl;
    cin>> ganancia;
    salario=ganancia*dias;
    
    cout<< "su salario es de: " <<salario <<endl;
    
    return 0;
}
