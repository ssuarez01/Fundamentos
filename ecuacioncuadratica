#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

int main() {
	int a,c;
	float b,d,x,x1,x2;
	cout<<"ingrese el valor de a"<<endl;
	cin>>a;
	cout<<"ingrese el valor de b"<<endl;
	cin>>b;
	cout<<"ingrese el valor de c"<<endl;
	cin>>c;
	if(a!=0){
	d= pow(b,2)-4*b*c;
	   if(d==0){
		   x=-b/(2*a);
	       cout<< "solucion unica "<<x;
	       }
	   else if(d>0){
		   
		   x1=(-b+sqrt(d))/(2*a);
		   x2=(+b+sqrt(d))/(2*a);
		   cout<<"x1 = "<<x1<<endl;
		   cout<<"x2 = "<<x2<<endl;
	   
	      } 
	
	}
	else 
	{
	cout<<"error";
    }





getch();
return 0;
}
